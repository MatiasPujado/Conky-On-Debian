conky.config = {
    -- ----------------------------------Windows Settings
        own_window = true,
        own_window_class = 'Conky',
        own_window_type = 'desktop',
        own_window_hints = 'undecorated,sticky,below,skip_taskbar,skip_pager',

        own_window_transparent = true,
        own_window_argb_visual = true,

        background = false,
        double_buffer = true,
    -- ----------------------------------Position
        alignment = 'top_right',

        gap_x = 8,
        gap_y = 26,

        minimum_height = 25,
        minimum_width = 25,
    -- ----------------------------------Font
        draw_borders = false,
        draw_graph_borders = false,
        draw_outline = false,
